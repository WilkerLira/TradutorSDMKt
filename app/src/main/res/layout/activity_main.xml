<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/mainLl"
        tools:context=".MainActivity">

    <!--Palavra original a ser traduzida-->
    <EditText
            android:id="@+id/originalEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Digite a palavra aqui"
            android:inputType="text"/>
    <!--Idioma original-->
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Idioma original: "/>

    <Spinner
            android:id="@+id/idiomaOrigemSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <!--Idioma destino-->
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Idioma destino: "/>

    <Spinner
            android:id="@+id/idiomaDestinoSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <Button
            android:id="@+id/traduzirButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Traduzir"/>

    <!--Texto traduzido-->
    <TextView
            android:id="@+id/traduzidoTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

</LinearLayout>